@model _1670_NhatMinh_Source.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
    </dl>
</div>
@if (User.IsInRole("StoreOwner"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.BookId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}

<br />
<h2>Comments</h2>
@if (Model.Comments != null && Model.Comments.Count > 0)
{
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var comment in Model.Comments)
            {
                <li class="list-group-item">
                    <div class="card-body">
                        <p class="card-text">@comment.Content</p>
                        <p class="card-text">@comment.Date.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </li>
            }
        </ul>
    </div>
}
else
{
    <p>No comments available.</p>
}
<div>
    <a class="btn btn-success" asp-controller="Comments" asp-action="Create">Write Comment About This Book!</a>
</div>
